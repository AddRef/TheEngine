<root>
	<!-- List of components to unpack from specified directory by unpack.py -->
	<!-- Each component can have the following attributes: -->
	<!-- 	enable_destination_cache = [enabled(default), disabled] - disabled or enables caching of this component in file_cache-->
	<!-- 	unpack_destination = [{ENV:<environment variable>}/path, <path>] - overrides location where component will be unpacked-->
	<unpack_config>
		<common>
			<bin2cpp/>
			<glm/>
			<gtest/>
			<lua/>
			<SDL2/>
			<easylogging/>
		</common>
		<linux>
			<boost_1_59_0 enable_destination_cache='disabled'/>
		</linux>
		<windows>
			<boost_1_59_0 enable_destination_cache='disabled' unpack_destination='{ENV:TEMP}'/>
		</windows>
		<mac>
			<boost_1_59_0 enable_destination_cache='disabled'/>
		</mac>
	</unpack_config>
	<!-- Various setting for components, their meaning is based on component -->
	<components_config>
		<!-- build_directory = [{ENV:<environment variable>}/path, <path>] - overrides boost location used to build, copy headrs and libs, etc-->
		<!-- remove_after_build = [enabled, disabled(default)] - overrides setting which forces script to remove boost src location when it exits-->
		<boost build_directory='{ENV:TEMP}\boost_1_59_0' remove_after_build='enabled'>
			<!-- List of boost libraries to build by boost.py -->
			<log/>
			<filesystem/>
		</boost>
	</components_config>
</root>